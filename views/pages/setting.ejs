                                <th scope="col">Block Id</th>
                                <th scope="col">IP ADDRESS </th>
                                <th scope="col">PORT</th>
                                <th scope="col">Latitude</th>
                                <th scope="col">Longitude</th>
                                <th scope="col">
                                    <button type="button" name="add-jammer-btn" title="Add jammer" id="add-jammer"
                                        class="bg-gray-900 py-1 px-9 m-2 rounded-md hover:bg-gray-700">
                                        <i class="fa-solid fa-plus"></i>
                                    </button>
